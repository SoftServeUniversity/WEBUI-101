- search.facet(:exhibition_month).rows.sort {|y, x| y.value.to_date <=> x.value.to_date }.each do |row|
  %p
    - if params[:month].blank?
      = link_to row.value, month: row.value, search: params[:search], remote: true
      %span (#{row.count})
    - else
      %strong
        = row.value
      %span (#{link_to 'remove', month: nil, search: params[:search], remote: true})


