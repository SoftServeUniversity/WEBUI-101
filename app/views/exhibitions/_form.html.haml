= simple_form_for(@exhibition) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :description
    =f.label "Start date"
    = f.text_field :start_date, 'data-behaviour' => 'datepicker', 'data-date-format'=> "dd-mm-yyyy"
    =f.label "End date"
    = f.text_field :end_date, 'data-behaviour' => 'datepicker', 'data-date-format'=> "dd-mm-yyyy"
    = f.input :adress
    = f.input :virtual

  .form-actions
    = f.button :submit
