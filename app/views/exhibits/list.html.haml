.row
  = form_tag('/exhibits/list', method: 'get', role: 'form', class: 'search-form', remote: true) do
    .col-xs-4
      .form-group
        = search_field_tag 'search', nil, placeholder: 'Enter search term...', required: true, class: 'form-control'
      = link_to 'show all', search: nil
    .col-xs-1
      .form-group
        %button.btn.btn-primary.search-button
          %span.glyphicon.glyphicon-search
.container.text-center
  %h3
    Exhibits list
  .btn-group.pull-right
    %a.btn.btn-primary{href: exhibits_path, role: "button"} Blocks
    %a.btn.btn-primary{href: list_exhibits_path, role: "button"} List
    %a.btn.btn-primary{href: timeline_exhibits_path, role: "button"} Timeline
  .clearfix
  %hr
  .exhibits-list
    - if @exhibits.length > 0
      - @exhibits.each do |exhibit|
        .row.tags
          .col-xs-12.col-sm-10.col-sm-offset-1.col-md-10.col-md-offset-1.col-lg-8.col-lg-offset-2.item
            %a{href: "#{exhibit_path(exhibit)}"}
              .pull-left
                - if exhibit.pictures.any?
                  %img{src: "#{exhibit.pictures.first.image}"}
                - else
                  %img{alt: "default", src: "/uploads/picture/image/default.jpg"}/
              %h2.ca-main
                = exhibit.name
              %p.ca-main.text-left
                #{exhibit.description.slice(0,400)}
      .text-center.paginator
        = paginate @exhibits
    - else
      %h4 No exhibits.

