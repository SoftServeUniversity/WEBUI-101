= simple_form_for(@exhibit, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, label_html: { class: 'col-sm-2' }
    = f.input :registration_number, label_html: { class: 'col-sm-2' }
    = f.input :date_of_receipt, label_html: { class: 'col-sm-2' }
    = f.input :fund_creator, label_html: { class: 'col-sm-2' }
    = f.input :opportunity_for_transportation, label_html: { class: 'col-sm-2' }
    = f.input :the_degree_of_preservation, label_html: { class: 'col-sm-2' }
    = f.input :authenticity, label_html: { class: 'col-sm-2' }
    = f.input :the_electronic_version, label_html: { class: 'col-sm-2' }
    = f.input :size, label_html: { class: 'col-sm-2' }
    = f.input :description, :as => :pagedown, :input_html => { :preview => true }, label_html: { class: 'title-center col-sm-12' }, my_wrapper_html: { class: 'col-sm-12' }

  .form-actions
    = f.button :submit
