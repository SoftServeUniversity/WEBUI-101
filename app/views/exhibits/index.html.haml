.row.exhibit-search-form.col-xs-offset-7
  = form_tag('/exhibits', method: 'get', role: 'form', class: 'search-form') do
    .col-xs-9
      .form-group
        = search_field_tag 'search', nil, placeholder: 'Enter search term...', required: true, class: 'form-control'
      = link_to 'show all', search: nil
    .col-xs-1
      .form-group
        %button.btn.btn-primary.search-button
          %span.glyphicon.glyphicon-search

.container.text-center
  %h3
    Exhibits
  .btn-group.pull-right
    %a.btn.btn-primary{href: exhibits_path, role: "button"} Blocks
    %a.btn.btn-primary{href: list_exhibits_path, role: "button"} List
    %a.btn.btn-primary{href: timeline_exhibits_path, role: "button"} Timeline
  .clearfix
  %hr
  .exhibits-mosaic
    = render partial: 'exhibits/mosaic'
  .paginator
    = paginate @exhibits
