.row
  .span4.offset4
    %h2 Sign in
    = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      .form-inputs
        = f.input :email, :required => false, :autofocus => true, label_html: { class: 'col-sm-12' }
        = f.input :password, :required => false, label_html: { class: 'col-sm-12' }
        .col-sm-12
          = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
      .form-actions
        .col-sm-12
          = f.button :submit, "Sign in"
    .col-sm-12
      = render "devise/shared/links"
