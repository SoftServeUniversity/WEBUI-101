.row.text-center
  .row
    .col-md-5.col-md-offset-3
      .btn-group{"data-toggle" => "buttons"}
        %label.btn.btn-primary.active
          %input#option1{name: "options", type: "radio"}/
          %a.white-col{"data-toggle" => "tab", href: "#exhibits"} Exhibits
        %label.btn.btn-primary
          %input#option2{name: "options", type: "radio"}/
          %a.white-col{"data-toggle" => "tab", href: "#exhibitions"} Exhibitions
        %label.btn.btn-primary
          %input#option3{name: "options", type: "radio"}/
          %a.white-col{"data-toggle" => "tab", href: "#papers"} Papers
        %label.btn.btn-primary
          %input#option4{name: "options", type: "radio"}/
          %a.white-col{"data-toggle" => "tab", href: "#biographies"} Biographies


    .col-md-2.visible-md.visible-lg
      .btn-group
        %button.btn.btn-primary.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
          My Account
          %span.caret
        %ul.dropdown-menu{role: "menu"}
          %li
            %strong= current_user.email
          %li.divider
          %li
            = link_to 'Invite new user', new_user_invitation_path
          %li
            = link_to 'Edit user', edit_user_registration_path
          %li.divider
          %li
            = link_to 'Sign out', destroy_user_session_path, method: :delete

  %br
  .row
    .tab-content
      #exhibits.tab-pane.active
        .row
          - @exhibits.each do |exhibit|
            %hr
            .row
              .col-xs-12.col-md-3.col-md-offset-2
                /= exhibit.name
                =link_to exhibit.name, exhibit_path(exhibit)
              .col-xs-6.col-md-3
                = exhibit.registration_number
              /.col-xs-12.col-md-4.col-md-offset-1= link_to 'Show', exhibit
              .col-xs-2.col-md-1
                = link_to 'Edit', edit_exhibit_path(exhibit),:class => 'btn btn-info btn-xs'
              .col-xs-2.col-md-1
                = link_to 'Delete', exhibit, :method => :delete, :class => 'btn btn-danger btn-xs', :data => { :confirm => 'Are you sure?' }
              .col-xs-2.col-md-2

      #exhibitions.tab-pane
        .row
          - @exhibitions.each do |exhibition|
            %hr
            .row
              .col-xs-12.col-md-3.col-md-offset-2
                /= exhibit.name
                =link_to exhibition.name, exhibition_path(exhibition)
              .col-xs-6.col-md-3
                = exhibition.adress
              /.col-xs-12.col-md-4.col-md-offset-1= link_to 'Show', exhibit
              .col-xs-2.col-md-1
                = link_to 'Edit', edit_exhibition_path(exhibition),:class => 'btn btn-info btn-xs'
              .col-xs-2.col-md-1
                = link_to 'Delete', exhibition, :method => :delete, :class => 'btn btn-danger btn-xs', :data => { :confirm => 'Are you sure?' }
              .col-xs-2.col-md-2

      #papers.tab-pane ...
      #biographies.tab-pane ...

